{
  "variables": {
    "do_token": "{{ env `do_token` }}",
    "do_region": "{{ env `do_region` }}"
  },

  "builders": [{
    "type": "digitalocean",
    "ssh_username": "root",
    "api_token": "{{ user `do_token` }}",
    "size": "512mb",
    "region": "{{ user `do_region` ",
    "image": "ubuntu-14-04-x64",
    "droplet_name": "packer",
    "snapshot_name": "ubuntu-14-04-x64-{{ timestamp }}"
  }],

  "provisioners": [{
    "type": "shell",
    "script": "ubuntu-14.04-install.sh"
  }]
}
