# vim: set ts=4 sw=4 tw=0 noet :

/var/log/dims/*.log {
    rotate 4
    weekly
    missingok
    notifempty
    sharedscripts
    postrotate
		[ -f /var/run/rsyslogd.pid ] && kill -HUP $(cat /var/run/rsyslogd.pid)
    endscript
}
