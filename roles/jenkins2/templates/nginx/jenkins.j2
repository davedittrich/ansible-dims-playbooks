# {{ ansible_managed }} [ansible-playbooks v{{ ansibleplaybooks_version }}]
#
# This NGINX configuration comes from the Jenkins web site:
# https://wiki.jenkins-ci.org/display/JENKINS/Jenkins+behind+an+NGinX+reverse+proxy

{% if jenkins_fqdn is not defined %}
{% set jenkins_fqdn = ansible_fqdn %}
{% endif %}

upstream jenkins {
    server 127.0.0.1:{{ jenkins_port }};
}

# The following is for cleartext HTTP access.
#
#server {
#  listen {{ nginx_default_port }};
#  server_name {{ jenkins_fqdn }};
#  return 301 http://{{ jenkins_fqdn }}$request_uri;
#}

server {
  listen 443;
  server_name {{ jenkins_fqdn }};

  location ^~ /jenkins {
    sendfile off;
    proxy_pass http://127.0.0.1:{{ jenkins_port }};
    proxy_set_header Host $host:$server_port;
    proxy_set_header X-Forwarded-Host $host:$server_port;
    proxy_set_header X-Forwarded-Server $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
    proxy_redirect off;
    proxy_http_version 1.1;
    proxy_max_temp_file_size 0;
    client_max_body_size       10m;
    client_body_buffer_size    128k;
    proxy_connect_timeout      90;
    proxy_send_timeout         90;
    proxy_read_timeout         90;
    proxy_buffer_size          4k;
    proxy_buffers              4 32k;
    proxy_busy_buffers_size    64k;
    proxy_temp_file_write_size 64k;
  }
}
