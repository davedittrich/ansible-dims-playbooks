load helpers

function setup() {
    source $DIMS/bin/dims_functions.sh
}

@test "[S][EV] MX record exists for {{ dims_domain }}" {
    dig @8.8.8.8 {{ dims_domain }} mx +short | grep {{ dims_domain }}
}

@test "[S][EV] MX record exists for {{ dims_fqdn }}" {
    dig @8.8.8.8 {{ dims_fqdn }} mx +short | grep {{ dims_domain }}
}

